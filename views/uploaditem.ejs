<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Product Upload</title>
</head>

<body>
  <section class="">
    <div class="center">
      <%- include('./catalogHeader', { user }) %>
    </div>
    
  </section>
  





  <div class="px-4 py-5 my-5 text-center ">
    <div class="mb-4">
      <h2 class="display-5 fw-bold text-body-emphasis">
        "Revive the Past, Renew the Future â€“ Buy and Sell Preloved Treasures!"
      </h2>
    </div>

    <div class="container">
      <% if (typeof alertMessage !== "undefined") { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= alertMessage %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
    </div>

    <form class="row g-3 needs-validation" action="/uploaditem" method="POST" enctype="multipart/form-data" novalidate>
      <!-- Product Pictures -->
      <div class="row mb-3">
        <label for="productPictures" class="col-sm-2 col-form-label fw-bold text-start">Product Cover Photo</label>
        <div class="col-sm-10">
          <input class="form-control" type="file" id="productCoverPhoto" name="productCoverPhoto" accept="image/*" 
            required>
          <div class="invalid-tooltip">
            Please upload at least one product image.
          </div>
        </div>
      </div>
      <div class="row mb-3">
        <label for="productPictures" class="col-sm-2 col-form-label fw-bold text-start">Product Additional Pictures</label>
        <div class="col-sm-10">
          <input class="form-control" type="file" id="productPictures" name="productPictures" accept="image/*" multiple
            required>
          <div class="invalid-tooltip">
            Please upload at least one image.
          </div>
          <div class="form-text">Add more images for better visibility of your product.</div>
        </div>
      </div>

      <!-- product name  -->
      <div class="row mb-3">
        <label for="productLocation" class="col-sm-2 col-form-label fw-bold text-start">Product Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="productName" name="productName" required>
          <div class="invalid-tooltip">
            Please provide a valid name.
          </div>
        </div>
      </div>

      <!-- price  -->
      <div class="row mb-3">
        <label for="productPrice" class="col-sm-2 col-form-label fw-bold text-start">Product Price</label>
        <div class="col-sm-10">
          <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" class="form-control" id="productPrice" name="productPrice" placeholder="Enter price" min="0" step="0.01" required>
          </div>
          <div class="invalid-tooltip">
            Please enter a valid price.
          </div>
        </div>
      </div>
      <!-- Product Description -->
      <div class="row mb-3">
        <label for="productDescription" class="col-sm-2 col-form-label fw-bold text-start">Product Description</label>
        <div class="col-sm-10">
          <textarea class="form-control" placeholder="Describe the product..." id="productDescription"
            name="productDescription" style="height: 100px" required></textarea>
          <div class="invalid-tooltip">
            Please provide a product description.
          </div>
        </div>
      </div>

      

      <!-- Location -->
      <div class="row mb-3">
        <label for="contactNumber" class="col-sm-2 col-form-label fw-bold text-start">Contact Number</label>
        <div class="col-sm-10">
          <input type="tel" class="form-control" id="contactNumber" name="contactNumber" placeholder="+8801234567890"
            pattern="^\+880[0-9]{10}$" required>
          <div class="invalid-tooltip">
            Please enter a valid contact number (e.g., +8801234567890).
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <label for="productLocation" class="col-sm-2 col-form-label fw-bold text-start">Location</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="productLocation" name="productLocation" required>
          <div class="invalid-tooltip">
            Please provide a valid location.
          </div>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit form</button>
      </div>
    </form>











  </div>










  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
